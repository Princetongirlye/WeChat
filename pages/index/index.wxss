}
.topItems{
  position: relative;
  width: 100%;
  padding: 2px;
  margin-bottom: 10px;
  flex-direction: row; 
  justify-content: flex-start;
}
.topItems .top-item{
  float:left;
  margin: 5px;
  width: 20%;
  height:30px;
  line-height: 30px;
  font-size: 12px;
  border-bottom: 1px solid #dedede;
}
.topItems image{
  width:100%;
  height:200px;
}
.topItems .top-item text{
  text-align: center;
  display: block;
  margin-top: 3px;
  font-size: 12px;
}

.nav-left{
  display:inline-block;
  flex-direction: column;
  justify-content: space-between;
  width: 30%;
  height: 100%;
  text-align: center;
}
.nav-left .nav-left-items{

  height:30px;
  line-height: 30px;
  padding: 6px 0;
  font-size:14px;
  border-bottom: 1px solid #dedede;
  background: #f2f2f2;
}
.nav-left .nav-left-items.active{
  background: #fff;
}
.nav-right{
  position: absolute;
  flex: 1;
  right:0;
  top: 46.1%;
  width: 70%;
  height: 100%;
  padding: 10px;
  box-sizing: border-box;
}

.nav-right  .nav-right-items{
  float: left;
  margin-left: 25px;
  width: 35%;
  height: 100px;
  text-align: center;
 
}

.nav-right  .nav-right-items image{
  border-radius: 4px;
  width: 70px;
  height: 60px;
}
.nav-right .nav-right-items text{
  display: block;
  margin-top: 5px;
  font-size: 10px;
  
}

 .nav-right-items .stepper{
  width:60px;
  height:20px;
  border: 1px solid #ccc;
  border-radius: 3px;
  margin-left: 20%;
  
}

 .nav-right-items .stepper text{
  float:left;
  text-align: center;
  width:19px;
  line-height: 16px;
}

.nav-right-items .stepper input{
  font-size: 10px;
  width: 16px;
  height: 16px;
  float:left;
  text-align: center;
  border-left: 1px solid #ccc; 
  border-right: 1px solid #ccc; 
  
}
.stepper .normal{
  color:black;
}
.stepper .disabled{
  color:#ccc;
}